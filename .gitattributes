# Normalize line endings
* text=auto eol=lf

# Treat Xcode project files as text for better diffs
*.pbxproj text merge=union
*.xcscheme text
*.xcworkspace text

# Source files
*.swift text
*.h text
*.m text
*.mm text
*.cpp text
*.hpp text

# Scripts
*.sh text eol=lf

# YAML/JSON
*.yml text eol=lf
*.yaml text eol=lf
*.json text eol=lf
